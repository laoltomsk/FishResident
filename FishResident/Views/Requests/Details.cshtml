@using FishResident.Services
@model FishResident.Models.SearchRequest
@inject IPermissionService UserPermissions

@{
    ViewData["Title"] = "Details";
    var canEdit = UserPermissions.IsOwnerOfRequest(Model);
}

<h2>Details</h2>

<div>
    <h4>Search Request</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cost)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cost)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        @foreach (var feature in Model.FeatureRequests.OrderBy(r => r.FeatureType.Name).ToList())
        {
            <dt>
                @feature.FeatureType.Name
            </dt>
            <dd>
                @feature.Value
            </dd>
        }
    </dl>
</div>
<hr />
<h4>Search Results</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Results.First().Residence.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.First().Residence.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.First().Residence.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.First().Residence.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Results.First().Residence.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Results)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Residence.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Residence.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Residence.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Residence.Owner.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Residence.Type.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Residences" asp-route-id="@item.Residence.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (canEdit)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <text>|</text>
    }
    <a asp-action="Index">Back to List</a>
</div>
