@model FishResident.Models.ResidencePhoto

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            File
        </dt>
        <dd>
            <div class="row">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@Model.Path" alt="Image" />
                    </div>
                </div>
            </div>
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Details" asp-controller="Residence" asp-route-id="@ViewBag.Residence.Id">Back to residence</a>
        </div>
    </form>
</div>