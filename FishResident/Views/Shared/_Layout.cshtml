<!DOCTYPE html>
<html lang="ru">
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
    <meta charset="UTF-8">

    <title>@ViewData["Title"] - FishResident</title>

    <meta name="description" content="">
    <meta name="keywords" content="">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <![endif]-->

    <meta property="og:title" content="">
    <meta property="og:description" content="">
    <meta property="og:type" content="website">
    <meta property="og:image" content="">

    <!--<link rel="shortcut icon" href="/favicon.png">-->
    <!--<link rel="preload" href="/fonts/.woff2" as="font" crossorigin type="font/woff2">-->
    <link rel="stylesheet" href="/css/vendor.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>

    <header class="header" id="js-header">
        <div class="header__inner">
            <a href='/' class="header__logo"><img src="/i/logo.jpg" /></a>
            <div class="header__controls">
                <ul class="menu">
                    <li class="menu__item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="menu__item"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    <li class="menu__item"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="menu__item"><a asp-area="" asp-controller="Residences" asp-action="Index">My residences</a></li>
                        <li class="menu__item"><a asp-area="" asp-controller="Requests" asp-action="Index">My requests</a></li>
                        <li class="menu__item"><a asp-area="" asp-controller="ResidenceTypes" asp-action="Index">Residence types</a></li>
                    }
                    <!-- класс _select -->

                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </header>

    <main id="js-main">
        @RenderBody()
    </main>
    <footer class="footer" id="js-footer">
        <div class="footer__inner">
            <div class="footer__row _search">
                <div class="footer__column">
                    <ul class="footer__menu">
                        <li class="footer__item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="footer__item"><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li class="footer__item"><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="footer__item"><a asp-area="" asp-controller="Residences" asp-action="Index">My residences</a></li>
                            <li class="footer__item"><a asp-area="" asp-controller="Requests" asp-action="Index">My requests</a></li>
                            <li class="footer__item"><a asp-area="" asp-controller="ResidenceTypes" asp-action="Index">Residence types</a></li>
                        }
                    </ul>
                </div>
                <div class="footer__column">
                    <form method="get" action="/ajax/validate.php" class="footer__form js-validate">
                        <div class="fields">
                            <div class="field js-field">
                                <label for="">Поиск</label>
                                <input name="footerSearch" type="text" required />
                            </div>
                            <button class="footer__search"> </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

<script src="/js/vendor.js"></script>
<script src="/js/svg4everybody.min.js"></script>
<script>svg4everybody();</script>
<script src="/js/app.js"></script>
</body>
</html>
